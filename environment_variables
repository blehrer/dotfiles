[[ $(uname -a) = CYGWIN* ]] && {
    export _HOME=/cygdrive/c/Users/$(whoami)
}
[[ $(uname -a) = MINGW* ]] && {
    export _HOME=$HOME
}
[[ $(uname -a) = Linux*microsoft*WSL* ]] && {
    export _HOME=$HOME
}
[[ $(uname -a) = Darwin* ]] && {
    export _HOME=$HOME
}

## Environment Variables
### Places
export XML_CATALOG_FILES=/opt/homebrew/etc/xml/catalog
export WORKPLACE=$HOME/workplace
export NBCUOTS=$WORKPLACE/github.com/NBCUOTS
export ONAIR=$WORKPLACE/github.inbcu.com/OnAirSystems
export OTS=$WORKPLACE/github.com/NBCUniversalOTS
export XIT_HOMES=$OTS/data/xit
export XH=$XIT_HOMES
export CONFIG_DIR=~/.config
export DOTFILES_HOME=$CONFIG_DIR/dotfiles
export df=$DOTFILES_HOME
export TASK_HOME=$_HOME/Documents/jira
export LOGS_HOME=$WORKPLACE/output
export WORKTREES_HOME=$NBCUOTS
export APPS=~/.local/share/applications
export ALLURE_HOME="~/.local/share/allure*/bin"
export VIM_PLUGINS=~/.vim/plugged
#export FZF_DEFAULT_COMMAND="ag -G" fzf
#export FZF_DEFAULT_OPTS="--layout=reverse --height 25%"
export FZF_DEFAULT_COMMAND='rg --files --hidden --smart-case --glob "!.git/*"'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export NOTES=~/Documents/notes
export CORRETTO_8_HOME=~/Library/Java/JavaVirtualMachines/corretto-1.8.0_372/Contents/Home
export CORRETTO_11_HOME=~/Library/Java/JavaVirtualMachines/corretto-11.0.19/Contents/Home
export OPENJDK_8_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_361.jdk/Contents/Home
export OPENJDK_11_HOME=/Library/Java/JavaVirtualMachines/jdk-11.jdk/Contents/Home
export JMETER_HOME=/opt/homebrew/Cellar/jmeter/5.5/libexec

### Files and default values
export DISPLAY_NUMBER="0"
export DISPLAY=$(grep -m 1 nameserver /etc/resolv.conf | awk '{print $2}'):$DISPLAY_NUMBER
export EDITOR=vim
export VISUAL=vim
export PAGER="/usr/bin/less -i"
export INPUTRC=$_HOME/.inputrc
export GCM_CREDENTIAL_STORE=gpg
export HIGHLIGHT_STYLE=base16/gruvbox-dark-hard
export HISTFILE=~/.cache/zsh/zsh-history
#export HISTTIMEFORMAT="%d/%m/%y %T "

# Windows specific
[[ $(uname -a) = CYGWIN* ]] || [[ $(uname -a) = MINGW* ]] && {
    export JDKS=$_HOME/.jdks
}

# Docker environment variables
export HOST_HOME=$HOME
export HOST_WORKTREES_HOME=$WORKTREES_HOME
export HOST_LOGS_HOME=$LOGS_HOME

# App-specific only
export M2_HOME=/usr/share/maven

### Parameters
export SAVEHIST=10000000
export HISTSIZE=1000000000

## Integration with cyberpeacock_login
#export KUBECONFIG='$KUBECONFIG:~/.kube/config-cloudpipeline-eks-nonprod-e2e:~/.kube/cloudpipeline-eks-nonprod-1'
export KUBECONFIG=~/.kube/config-fwd-eks-us-east-1

## Cygwin
export GIT_DISCOVERY_ACROSS_FILESYSTEM=1

## AWS
export AWS_REGION=us-east-1
export AWS_CONFIG_FILE=$_HOME/.aws/config
export AWS_DEFAULT_REGION=us-east-1
