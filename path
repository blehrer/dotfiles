# Prepend to path
export PATH="$PYENV_ROOT/bin:$PATH"
export PATH="$WORKPLACE/cp-tools/bin/cp-tools/yag:$PATH"
export PATH="$WORKPLACE/cp-tools/bin/cp-tools/kinesis-utils:$PATH"
export PATH="$WORKPLACE/cp-tools/bin/cp-tools/s3-utils:$PATH"
export PATH="$WORKPLACE/cp-tools/bin/cp-tools/sqs-utils:$PATH"
export PATH="$WORKPLACE/cp-tools/bin/cp-tools/transfer-request-generator:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.jenv/bin:$PATH"
export PATH="$(which aws_completer):$PATH"

# Append to path
export PATH="$PATH:$DOTFILES_HOME/bin"
[[ $(uname) = Darwin ]] && {
	export PATH="$PATH:/usr/local/homebrew/bin"
	export PATH="$PATH:/usr/local/bin"
	export PATH="$PATH:$HOME/.local/bin/"
}

# Prepend to path, using stuff already on the path
[[ $(uname) = Darwin ]] && {
	export PATH="$(brew --prefix)/opt/yq@3/bin:$PATH"
	eval "$(jenv init -)"
}

