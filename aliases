## Re-source files
function src() {
    echo "Sourcing $1";
    source "$1";
}

alias sb='src ~/.bashrc'
alias sz='src ~/.zshrc'
alias soz='src $CONFIG_DIR/zsh/oh-my-zsh.cfg'
alias sa='src $DOTFILES_HOME/aliases'
alias se='src $DOTFILES_HOME/environment_variables'
