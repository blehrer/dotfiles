#!/usr/bin/env bash

xit() {
    cmd=$1
    
    [ $cmd ] || {
        echo "
        Supported actions:
            up
            down
            clean
            build
        "
        return 1
    }
    
    [ $cmd ] && {
        [[ $cmd = 'up' ]] && source $DOTFILES_HOME/lib/xit/xit-up $2 && return $?
        [[ $cmd = 'down' ]] && source $DOTFILES_HOME/lib/xit/xit-down && return $?
        [[ $cmd = 'clean' ]] && source $DOTFILES_HOME/lib/xit/xit-clean && return $?
        [[ $cmd = 'js-clean' ]] && source $DOTFILES_HOME/lib/xit/xit-js-clean && return $?
        [[ $cmd = 'java-clean' ]] && source $DOTFILES_HOME/lib/xit/xit-java-clean && return $?
        [[ $cmd = 'build' ]] && source $DOTFILES_HOME/lib/xit/xit-dist && return $?
        #[[ $cmd = 'install' ]] && source $DOTFILES_HOME/lib/xit/xit-install && return $?
        [[ $cmd = 'install' ]] && source $ONAIR/xit.git/src/main/scripts/local/bin/install.sh && return $?
        
        [[ $cmd = 'tll-gen-run' ]] && source $DOTFILES_HOME/lib/xit/xit-tll-gen-run && return $?
    } || {
        echo $1 not supported 
        return 1
    }
}
