#!/usr/bin/env bash

xit() {
    lib=$1

    [ $lib ] || {
        echo Missing `repo` argument (e.g. mongock tll-data-services-datamigration {}
        return 1
    }

    [ $lib ] && {
        [[ $lib = 'fwd' ]] && eval fwd ${@}
        [[ $lib = 'tll-data-services-datamigration' ]] && eval tllDS ${@}
        return $?
    } || {
        echo $1 not supported
        return 1
    }
